class Solution {
    public int[] productExceptSelf(int[] nums) {
        // n -> length nums
        //create 3 arrays left,right,res
        //update left array:1 to n-1"left[i]=left[i-1]*nums[i-1];
        //update right array:n-2 to 0"right[i]=right[i+1]*nums[i+1];
        //res[i]=left[i]*right[i]
        int n=nums.length;
        int[] left=new int[n];
        int[] right=new int[n];
        int[] res= new int[n];
        left[0]=1;
        right[n-1]=1;
        for(int i=1;i<=n-1;i++)
        {
        left[i]=left[i-1]*nums[i-1];
        }
        for(int i=n-2;i>=0;i--)
        {
            right[i]=right[i+1]*nums[i+1];
        }
        for(int i=0;i<n;i++)
        {
            res[i]=left[i]*right[i];
        }
        return res;

    }
}
