class Solution {
    public ListNode swapNodes(ListNode head, int k) {
        if (head == null) return head;

        ListNode curr = head;
        for (int i = 1; i < k; i++) {
            if (curr.next != null)
                curr = curr.next;
            else
                return head;
        }

        ListNode p = curr;
        ListNode q = head;

        ListNode tempNode = curr;
        while (tempNode.next != null) {
            q = q.next;
            tempNode = tempNode.next;
        }

        int temp = p.val;
        p.val = q.val;
        q.val = temp;

        return head;
    }
}
